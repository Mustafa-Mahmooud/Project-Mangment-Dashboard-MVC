@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
     
        body {
            background: linear-gradient(135deg, #004080, #00c2ff); 
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            text-align: center;
        }

       
        .display-4 {
            font-size: 3rem; 
            margin-bottom: 1rem;
            color: #00c2ff; 
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); 
        }

    
        a {
            color: #00c2ff; 
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease; 
        }

            a:hover {
                color: #ffffff;
            }

    
        .btn-department {
            background-color: #001f3f;
            color: #ffffff; 
            padding: 0.75rem 1.5rem;  
            border: none; 
            border-radius: 5px;
            font-size: 1rem; 
            cursor: pointer; 
            margin-top: 2rem;
            transition: background-color 0.3s ease; 
        }

            .btn-department:hover {
                background-color: #00c2ff; 
            }
    </style>
</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Welcome To IKIEA</h1>

    </div>

</body>
</html>