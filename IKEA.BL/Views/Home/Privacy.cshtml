@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #0073e6, #66b2ff);
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            max-width: 700px;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            text-align: center;
            color: #004080;
        }

        h1 {
            color: #003366;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            line-height: 1.8;
            color: #333333;
            margin-bottom: 30px;
        }

        .btn-return {
            background-color: #004080;
            color: #ffffff;
            border: none;
            padding: 12px 25px;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-return:hover {
                background-color: #0066cc;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p>Welcome to our Privacy Policy page. Here, we explain how we collect, use, and protect your personal information.</p>

        <a href="/" class="btn-return">Return Home</a>
    </div>

</body>
</html>
