@using IKEA.PL.ViewModels.Role
@model RoleViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Department</title>
    <style>

        h1 {
            background: linear-gradient(135deg, #004080, #00c2ff);
            color: #ffffff;
            padding: 1rem 2rem;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin: 20px auto;
            width: fit-content;
        }
    </style>
</head>
<body>

    <h1>Create New Department</h1>

</body>
<br />

<form asp-action="Create" >

    <div asp-validation-summary="ModelOnly"></div>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Create Department</title>
        <style>

            .form-group {
                margin-bottom: 1.5rem;
            }


            .form-label {
                font-weight: bold;
                color: #004080;
                display: block;
                margin-bottom: 0.5rem;
            }


            .form-control, .from-control {
                width: 100%;
                padding: 0.75rem;
                border: 1px solid #ccd0d5;
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                font-size: 1rem;
                transition: border-color 0.3s ease, box-shadow 0.3s ease;
            }


                .form-control:focus, .from-control:focus {
                    border-color: #00c2ff;
                    box-shadow: 0 2px 8px rgba(0, 194, 255, 0.3);
                    outline: none;
                }


            .text-danger {
                color: #ff4d4f;
                font-size: 0.875rem;
            }


            .btn-submit {
                background-color: #004080;
                color: #ffffff;
                padding: 0.75rem 1.5rem;
                border: none;
                border-radius: 5px;
                font-size: 1rem;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .btn-submit:hover {
                    background-color: #00c2ff;
                }
        </style>
    </head>
    <body>


        <div class="form-group">
            <label class="form-label" asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label class="form-label" asp-for="RoleName">Role Name</label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </body>
    <div class="mt-3">

        <input type="Submit" value="create" class="btn btn-primary" />|
        <a asp-action="Index" class="btn btn-light">Back</a>

    </div>
</form>
