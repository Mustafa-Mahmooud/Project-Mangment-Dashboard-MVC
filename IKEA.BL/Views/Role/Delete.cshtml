@using IKEA.PL.ViewModels.Role
@model RoleViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #004080, #00c2ff);
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #00c2ff;
        }

        table {
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: rgba(0, 31, 63, 0.8);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #00c2ff;
        }

        th {
            background-color: #001f3f;
            color: #ffffff;
        }

        tr:hover {
            background-color: rgba(0, 200, 255, 0.3);
        }

        .btn {
            padding: 10px 20px;
            margin: 10px;
            font-size: 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-danger {
            background-color: #d9534f;
            color: #ffffff;
        }

        .btn-light {
            background-color: #f7f7f7;
            color: #333333;
        }

        .btn:hover {
            opacity: 0.8;
        }
    </style>
</head>
<h2>Delete User</h2>

<p>Are you sure you want to delete this user?</p>

<div>
    <p><strong>First Name:</strong> @Model.RoleName</p>
    <p><strong>Last Name:</strong> @Model.Id</p>
   
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
