@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>


<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">User Information</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label"><strong>First Name:</strong></label>
                        <input type="text" class="form-control-plaintext" readonly value="@Model.FName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Last Name:</strong></label>
                        <input type="text" class="form-control-plaintext" readonly value="@Model.LName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Email:</strong></label>
                        <input type="email" class="form-control-plaintext" readonly value="@Model.Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Phone:</strong></label>
                        <input type="text" class="form-control-plaintext" readonly value="@Model.PhoneNumber" />
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
