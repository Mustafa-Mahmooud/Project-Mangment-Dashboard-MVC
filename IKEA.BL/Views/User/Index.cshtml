@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>

        body {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
            color: #333;
        }


        .content-card {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 900px;
        }


        .table-responsive {
            margin-top: 20px;
        }

        h1 {
            color: #333;
            font-weight: bold;
        }

        .btn {
            margin: 0.2rem;
        }


            .btn:hover {
                opacity: 0.9;
                transition: opacity 0.3s;
            }
    </style>
</head>
<div class="content-card">
    <h1 class="text-center">@ViewData["Title"]</h1>

@if (Model?.Any() == true)
{
    <form asp-action="Index" method="get" class="mt-5 row justify-content-center align-items-center">
        <div class="row col-8 offset-1">
            <div class="col-8">
                <input type="text" name="search" class="form-control" id="searchInp" placeholder="Search By Name" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </form>

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
             
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                   
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
             
                    <td>
                        <a href="@Url.Action("Details", "User", new { id = User.Id })" class="btn btn-info">Details</a>
                    </td>
                    
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@User.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
