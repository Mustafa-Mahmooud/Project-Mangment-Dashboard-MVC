@model CreateEmployeeDto

@{
    ViewData["Title"] = "Create";
    var departments = new SelectList(ViewData["Departments"] as IEnumerable<DepartmentsToReturnDto>, nameof(DepartmentsToReturnDto.Id), nameof(DepartmentsToReturnDto.Name));
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Employee</title>
    <style>
        h1 {
            background: linear-gradient(135deg, #004080, #00c2ff);
            color: #ffffff;
            padding: 1rem 2rem;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin: 20px auto;
            width: fit-content;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: bold;
            color: #004080;
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-control, .from-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccd0d5;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus, .from-control:focus {
                border-color: #00c2ff;
                box-shadow: 0 2px 8px rgba(0, 194, 255, 0.3);
                outline: none;
            }

        .text-danger {
            color: #ff4d4f;
            font-size: 0.875rem;
        }

        .btn-submit {
            background-color: #004080;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #00c2ff;
            }
    </style>
</head>
<body>
    <h1>Create New Employee</h1>
</body>
<br />

<form action="/Employee/Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="form-label" asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Age">Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Address">Address</label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @*   <div class="form-group">
    <label class="form-label" asp-for="IsActive">Active Status</label>
    <input type="checkbox" asp-for="IsActive" class="form-control" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    *@
    <div class="form-group">
        <label class="form-label" asp-for="HiringDate">Hiring Date</label>
        <input type="date" asp-for="HiringDate" class="form-control" />
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Gender">Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="DepartmentId">Employees Department</label>
        <select asp-for="DepartmentId" asp-items="@departments" class="form-control">
            <option value="@null">Select Employee Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="EmployeeType">Employee Type</label>
        <select asp-for="EmployeeType" class="form-control">
            <option value="">Select Employee Type</option>
            <option value="FullTime">Full-Time</option>
            <option value="PartTime">Part-Time</option>

        </select>
        <span asp-validation-for="EmployeeType" class="text-danger"></span>
    </div>



    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-submit" />
        <a asp-action="Index" class="btn btn-light">Back</a>
    </div>
</form>
@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
