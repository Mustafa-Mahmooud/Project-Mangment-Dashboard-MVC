@using IKEA.PL.ViewModels.Identitiy
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>

<div asp-validation-summary="All" class="text-danger"> </div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			
			<input class="text" asp-for="Email" placeholder="Your Email Name" required="">
			<br />
			<input class="text" asp-for="Password" placeholder="Your Password" required="">
			<br />
		
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" type="checkbox" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Login">
		</form>
		<p>Don't have an Account? <a asp-action="Register">  SignUp </a></p>
		
	</div>


