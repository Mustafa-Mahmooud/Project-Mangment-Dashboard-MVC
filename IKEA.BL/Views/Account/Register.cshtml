@using IKEA.PL.ViewModels.Identitiy
@model Register
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<<div asp-validation-summary="All" class="text-danger"> </div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register">
			<input class="text" asp-for="Fname" placeholder="Your First Name" required="">
			<br />
			<input class="text" asp-for="Lname" placeholder="Your Last Name" required="">
			<br />
			<input class="text" asp-for="Email" placeholder="Your Email Name" required="">
			<br />
			<input class="text" asp-for="Password" placeholder="Your Password" required="">
			<br />
			<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Your Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IAgree" type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Register">
		</form>
		<p>Do You have an Account? <a asp-action="Login" asp-controller="Account"> Login </a></p>
	</div>
</div>
